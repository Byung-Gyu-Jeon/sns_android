<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:padding="3dp">

    <ImageView
        android:id="@+id/chatroom_left_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="top"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_lyan1_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatroom_left_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="무야호"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/chatroom_left_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatroom_left_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:maxLength="150"
        android:maxLines="15"
        android:padding="10dp"
        android:text="메세지 내용"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/chatroom_left_profile"
        app:layout_constraintTop_toBottomOf="@id/chatroom_left_username" />

    <TextView
        android:id="@+id/chatroom_left_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="오후 12:30"
        app:layout_constraintStart_toEndOf="@+id/chatroom_left_profile"
        app:layout_constraintTop_toBottomOf="@id/chatroom_left_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>
